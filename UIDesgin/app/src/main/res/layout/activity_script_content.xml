<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/ItemColor"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/content_title"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Title："
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/content_title_edittext"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="none"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:ems="10"
            android:text="" />

        <ImageButton
            android:id="@+id/edit_title_button"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_edit_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/content_description"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Description："
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/content_description_edittext"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:ems="10"
            android:inputType="none"
            android:text="" />
        <ImageButton
            android:id="@+id/edit_title_description"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_edit_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:orientation="horizontal"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content_action"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="Action："
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_moveup_button" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_movedown_button" />
            </LinearLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="新增action" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="編輯action" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="刪除action" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>